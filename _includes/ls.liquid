---
layout: layout
eleventyComputed: 
  testing: |
    {{ legend[1].name }}
  idname: 1
---



  


{% comment %} {{ title rotatePost }} {% endcomment %}

<main class="ls-container">
{% comment %} 
{% for legend in collections.daily %}
<article class="ls">
  <div class="ls__meta">
      Legend (1320)<span class="ls__location">{{ legend.location }}</span>
    </div>
    <h1 class="ls__name"><a href="/sector/{{ legend.name | slug }}" class="ls__link">{{ legend.name }}</a></h1>
    <p class="ls__drop">Drops: <strong class="ls__drop-item"></strong></p>


    <h2>Champions</h2>
    <ul class="ls__champions-list">
      {% for champions in legend.champions %}
        <li class="ls__champions-item">
          <h3 class="ls__champion">
            {% include champions.liquid %}
            {{ champions.name }} <span class="ls__champion-count">({{ champions.number }})</span>
          </h3>
          <p class="ls__champion-desc">{{ champions.desc }}</p>
        </li>
      {% endfor %}
    </ul>
    
    <h2>Burn</h2>
    <h3 class="ls__element">{% include burn.liquid %} {{ legend.burn }}</h3>
    <p class="ls__burn-desc">{{ legend.burnDesc }}</p>
  
    <h2>Shields</h2>
    <ul class="ls__shields-list">
      {% for shields in legend.shields %}
        <li class="ls__shields-item">
          <h3 class="ls__shield ls__element">
            {% include shields.liquid %}
          {{ shields.name }} <span class="ls__shields-count">({{ shields.frequency }})</span>
          </h3>
          <p class="ls__shields-desc">{{ shields.desc }}</p>
        </li>
      {% endfor %}
    </ul>
      
    <h2>Modifiers</h2>
    {% for modifiers in legend.modifiers %}
      <p><strong>{{ modifiers.name }}</strong> – {{ modifiers.desc }}</p>
    {% endfor %}

    <h2>Notes</h2>
    <p>{{ legend.notes }}</p>

</article>
{% endfor %} {% endcomment %}

<article class="ls">
  <div class="ls__meta">
    Legend (1320)<span class="ls__location"></span>
  </div>
  <h1 class="ls__name"><a href="#" class="ls__link"></a></h1>
  <p class="ls__drop">Drops: <strong class="ls__drop-item"></strong></p>

  <ul class="ls__info">
      <li class="ls__champion-wrapper">
        <strong>Champions</strong>:
      </li>
      <li>
        <strong>Burn</strong>: <span class="ls__burn ls__element"></span>
      </li>
      <li class="ls__shield-wrapper">
        <strong>Shields</strong>: 
      </li>
      <li>
        <strong>Modifiers</strong>:
        <span class="ls__modifier-name"></span> – <span class="ls__modifier-desc"></span>
      </li>
    </ul>

    <a href="/sector" class="readmore">See full details →</a>


</article>

</main>


<script src="/js/rotation.js"></script>
